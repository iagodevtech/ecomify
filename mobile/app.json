{
  "expo": {
    "name": "Ecomify",
    "slug": "ecomify-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#0a0a0a"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.ecomify.mobile",
      "buildNumber": "1.0.0",
      "infoPlist": {
        "NSCameraUsageDescription": "Este app precisa acessar a câmera para escanear códigos QR e tirar fotos de produtos.",
        "NSMicrophoneUsageDescription": "Este app precisa acessar o microfone para funcionalidades de áudio.",
        "NSFaceIDUsageDescription": "Este app usa Face ID para autenticação segura.",
        "NSLocationWhenInUseUsageDescription": "Este app precisa acessar sua localização para encontrar lojas próximas."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0a0a0a"
      },
      "package": "com.ecomify.mobile",
      "versionCode": 1,
      "permissions": [
        "CAMERA",
        "RECORD_AUDIO",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "USE_BIOMETRIC",
        "USE_FINGERPRINT",
        "VIBRATE",
        "INTERNET",
        "ACCESS_NETWORK_STATE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-notifications",
      "expo-local-authentication",
      "expo-secure-store",
      "expo-device",
      [
        "expo-build-properties",
        {
          "ios": {
            "newArchEnabled": false
          },
          "android": {
            "newArchEnabled": false
          }
        }
      ]
    ],
    "notification": {
      "icon": "./assets/notification-icon.png",
      "color": "#00f5ff",
      "androidMode": "default",
      "androidCollapsedTitle": "Ecomify"
    },
    "scheme": "ecomify",
    "extra": {
      "eas": {
        "projectId": "your-project-id-here"
      }
    }
  }
}
